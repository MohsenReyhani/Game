<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogPushDownAnimation">
        <item name="android:windowEnterAnimation">@anim/push_down_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/push_down_out_dialog</item>
    </style>

    <style name="DialogFadeInAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

</resources>
