<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgNoTransaction"
        android:layout_width="@dimen/xxlarge_size"
        android:layout_height="@dimen/xxlarge_size"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/txtEmotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/small_margin"
        android:textColor="@color/light_text"
        android:textSize="60sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/small_margin"
        android:textAlignment="center"
        android:textColor="@color/dark_text"
        android:textSize="@dimen/h2_font_size"/>

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/xsmall_margin"
        android:textAlignment="center"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/h4_font_size"/>

    <TextView
        android:id="@+id/txtLearnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/xsmall_margin"
        android:textAlignment="center"
        android:textColor="@color/link_normal"
        android:textSize="@dimen/h4_font_size"/>

</LinearLayout>