<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vBoxContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingBottom="@dimen/medium_margin"
    android:paddingLeft="@dimen/small_margin"
    android:paddingRight="@dimen/small_margin"
    android:paddingTop="@dimen/medium_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:autoLink="all"
                android:layoutDirection="rtl"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/h3_font_size"/>

            <CheckBox
                android:id="@+id/chkQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:button="@null"
                android:drawablePadding="@dimen/xsmall_margin"
                android:drawableRight="@drawable/radiobutton_selector"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/h4_font_size"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>