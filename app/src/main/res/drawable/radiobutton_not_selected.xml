<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom @dimen/xxsmall_margin Shadow -->
    <item
        android:top="@dimen/small_margin"
        android:left="@dimen/small_margin"
        android:right="@dimen/small_margin"
        android:bottom="@dimen/small_margin"
        >
        <shape android:shape="oval">


            <solid android:color="@color/dark_text" />

        </shape>
    </item>

    <!-- White Top color -->
    <item

        >

        <shape android:shape="oval">

            <solid android:color="@color/white" />
            <stroke android:color="@color/dark_text"
                android:width="1dp"/>
            <size
                android:width="@dimen/medium_margin"
                android:height="@dimen/medium_margin" />

        </shape>

    </item>


</layer-list>