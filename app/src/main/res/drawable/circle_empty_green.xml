<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom @dimen/xxsmall_margin Shadow -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="@color/green" />

            <size
                android:width="@dimen/small_size"
                android:height="@dimen/small_size" />
        </shape>
    </item>
    <!-- White Top color -->
    <item
        android:bottom="@dimen/xxsmall_margin"
        android:left="@dimen/xxsmall_margin"
        android:right="@dimen/xxsmall_margin"
        android:top="@dimen/xxsmall_margin"

        >

        <shape android:shape="oval">

            <solid android:color="@color/main_background" />
            <size
                android:width="@dimen/small_size"
                android:height="@dimen/small_size" />


        </shape>

    </item>


</layer-list>