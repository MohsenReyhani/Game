<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Bottom @dimen/xxsmall_margin Shadow -->
            <item>
                <shape android:shape="rectangle">

                    <solid android:color="@color/gray_text" />
                    <corners android:radius="10dp" />

                </shape>
            </item>

            <!-- White Top color -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"

                >

                <shape android:shape="rectangle">

                    <solid android:color="@color/main_background" />
                    <corners android:radius="10dp" />


                </shape>

            </item>
            <item android:bottom="@dimen/xxsmall_margin" android:left="@dimen/xxsmall_margin" android:right="@dimen/xxsmall_margin" android:top="@dimen/xxsmall_margin">

                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/transparent_light_dark4" />
                    <corners android:radius="10dp" />
                    <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
                </shape>

            </item>

        </layer-list>
    </item>
    <item android:state_focused="false">

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Bottom @dimen/xxsmall_margin Shadow -->
            <item>
                <shape android:shape="rectangle">

                    <solid android:color="@color/gray_text" />
                    <corners android:radius="10dp" />

                </shape>
            </item>

            <!-- White Top color -->
            <item android:bottom="@dimen/xxsmall_margin" android:left="@dimen/xxsmall_margin" android:right="@dimen/xxsmall_margin" android:top="@dimen/xxsmall_margin"

                >

                <shape android:shape="rectangle">

                    <solid android:color="@color/main_background" />
                    <corners android:radius="8dp" />


                </shape>

            </item>


        </layer-list>
    </item>


</selector>
