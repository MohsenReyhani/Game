<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom @dimen/xxsmall_margin Shadow -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/dark_text" />
            <corners android:radius="10dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:top="@dimen/xxsmall_margin"
        android:left="@dimen/xxsmall_margin"
        android:right="@dimen/xxsmall_margin"
        android:bottom="@dimen/xxsmall_margin"

        >

        <shape android:shape="rectangle">

            <solid android:color="@color/main_background" />
            <corners android:radius="8dp" />




        </shape>

    </item>


</layer-list>