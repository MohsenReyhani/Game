<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/ripple_effect">

    <item android:state_pressed="true">

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/gray_text" />
                    <corners android:radius="25dip" />
                    <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
                </shape>

            </item>

            <!-- White Top color -->
            <item android:bottom="@dimen/xxsmall_margin" android:left="@dimen/xxsmall_margin" android:right="@dimen/xxsmall_margin" android:top="@dimen/xxsmall_margin">

                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/white" />
                    <corners android:radius="25dip" />
                    <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
                </shape>

            </item>
            <item android:bottom="@dimen/xxsmall_margin" android:left="@dimen/xxsmall_margin" android:right="@dimen/xxsmall_margin" android:top="@dimen/xxsmall_margin">

                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/transparent_light_dark4" />
                    <corners android:radius="25dip" />
                    <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
                </shape>

            </item>

        </layer-list>
    </item>
    <item android:state_focused="false">

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/gray_text" />
                    <corners android:radius="25dip" />
                    <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
                </shape>

            </item>

            <!-- White Top color -->
            <item android:bottom="@dimen/xxsmall_margin" android:left="@dimen/xxsmall_margin" android:right="@dimen/xxsmall_margin" android:top="@dimen/xxsmall_margin">

                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/white" />
                    <corners android:radius="25dip" />
                    <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
                </shape>

            </item>


        </layer-list>
    </item>


</ripple>
